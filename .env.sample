# Core wallet and network
USER_ADDRESSES=0x123...,0xabc...          # Trader addresses to copy (comma-separated or JSON array)
PROXY_WALLET=0xproxywalletaddress        # Your trading wallet address
PRIVATE_KEY=your_private_key_without_0x  # Private key for PROXY_WALLET
DASHBOARD_PORT=4000                      # Port for the built-in dashboard/API

# Polymarket CLOB endpoints
CLOB_HTTP_URL=https://clob.polymarket.com/
CLOB_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws

# Blockchain / DB
RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_KEY
MONGO_URI=mongodb://localhost:27017/polymarket_copytrading
USDC_CONTRACT_ADDRESS=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174

# Copy strategy (defaults shown)
COPY_STRATEGY=PERCENTAGE                 # PERCENTAGE | FIXED | ADAPTIVE
COPY_SIZE=10.0                           # % for PERCENTAGE/ADAPTIVE, $ amount for FIXED
MAX_ORDER_SIZE_USD=100.0
MIN_ORDER_SIZE_USD=1.0
MAX_POSITION_SIZE_USD=1000.0
MAX_DAILY_VOLUME_USD=2000.0

# Legacy (used only if COPY_STRATEGY not set)
TRADE_MULTIPLIER=1.0
COPY_PERCENTAGE=10.0

# Trade aggregation
TRADE_AGGREGATION_ENABLED=false
TRADE_AGGREGATION_WINDOW_SECONDS=300

# Fetch / retry
FETCH_INTERVAL=1
RETRY_LIMIT=3
REQUEST_TIMEOUT_MS=10000
NETWORK_RETRY_LIMIT=3
TOO_OLD_TIMESTAMP=24

# Slippage / depth protection
MAX_SLIPPAGE_PCT=1.0                     # Allowed price drift vs trader (%)
SLIPPAGE_WAIT_MS=30000                   # Wait between retries when out of tolerance (ms)
SLIPPAGE_MAX_RETRIES=20                  # Retries before skipping (30s * 20 = 10 minutes)
MIN_BOOK_SIZE_USD=5.0                    # Minimum depth at best price
SLIPPAGE_ACTION=wait                     # wait | skip
